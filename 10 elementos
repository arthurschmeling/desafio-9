package javaapplication128;

import java.util.Scanner;

public class javaapplication128 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        int[] numeros = new int[10];
        int contador = 0;

        // Leitura dos valores
        for (int i = 0; i < numeros.length; i++) {
            System.out.print("Digite o número na posição " + (i + 1) + ": ");
            numeros[i] = ler.nextInt();
        }

        // Contagem dos números maiores que 100
        for (int num : numeros) {
            if (num > 100) {
                contador++;
            }
        }

        // Exibição do resultado
        System.out.println("Quantidade de números maiores que 100: " + contador);
    }
}
